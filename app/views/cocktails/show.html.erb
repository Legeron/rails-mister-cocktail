<%= @cocktail.name %>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> - <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash destroy_dose"></i>
  <% end %></li>

<% end %>
</ul>
<%= link_to "Back to cocktails", cocktails_path %>
<%= link_to "Ingredients", new_cocktail_dose_path(@cocktail) %>
